{
  "id": "data-source",
  "version": "0.1",
  "elementPrefix": "",
  "propertyPrefix": "asseco",
  "contributes": {
    "definitions": {
      "ParamType": {
        "classType": "Enum",
        "type": "ParamType",
        "default": "query",
        "values": [
          "query",
          "route",
          "header"
        ]
      },
      "DataSourceType": {
        "classType": "Enum",
        "type": "DataSourceType",
        "values": [
          "LocalData",
          "REST",
          "GraphQL"
        ]
      },
      "Param": {
        "properties": {
          "name": {
            "type": "string",
            "description": "Parameter name",
            "required": true,
            "version": "0.1"
          },
          "type": {
            "type": "ParamType",
            "description": "Parameter type",
            "version": "0.1"
          },
          "value": {
            "type": "string",
            "description": "Parameter value",
            "version": "0.1"
          },
          "binding-expression": {
            "type": "string",
            "description": "Parameter value binding expression",
            "version": "0.1"
          }
        }
      },
      "DataSource": {
        "description": "DataSource is an abstraction for using local data (arrays of JavaScript objects) or remote data (web services returning JSON or XML)",
        "properties": {
          "uri": {
            "type": "uri",
            "description": "URL to data service",
            "required": true,
            "version": "0.1"
          },
          "method": {
            "type": "string",
            "description": "Data service method. For REST endpoint is route",
            "required": true,
            "version": "0.1"
          },
          "dataSourceType": {
            "type": "DataSourceType",
            "description": "Type of service. Can be LocalData, REST and GraphQL. Other service types can be added in future like SOAP and GRPC",
            "required": true,
            "version": "0.1"
          },
          "contentType": {
            "type": "string",
            "description": "Type of returned content",
            "version": "0.1",
            "default": "application/json"
          },
          "isPageable": {
            "type": "string",
            "description": "Returns if result of service call is pageable",
            "default": false,
            "version": "0.1"
          },
          "isSortable": {
            "type": "string",
            "description": "Returns if result of service call is sortable",
            "default": false,
            "version": "0.1"
          },
          "sortByParam": {
            "type": "string",
            "description": "Parameter name for sorting",
            "version": "0.1"
          },
          "sortOrderParam": {
            "type": "string",
            "description": "Parameter name for sort order",
            "version": "0.1"
          },
          "pageParam": {
            "type": "string",
            "description": "Parameter name for page",
            "version": "0.1"
          },
          "pageSizeParam": {
            "type": "string",
            "description": "Parameter name for page size",
            "version": "0.1"
          },
          "totalCountParam": {
            "type": "string",
            "description": "Parameter name for totalCount",
            "version": "0.1"
          },
          "responseArrayPath": {
            "type": "string",
            "description": "Specifies the root path for response array",
            "version": "0.1"
          },
          "params": {
            "type": "Param[]",
            "description": "List of parameters for service call",
            "version": "0.1"
          }
        }
      }
    }
  }
}