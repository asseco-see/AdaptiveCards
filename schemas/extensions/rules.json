{
	"id": "rule",
	"version": "0.1",
	"elementPrefix": "",
	"propertyPrefix": "asseco",
	"contributes": {
		"definitions": {
			"Element": {
				"properties": {
					"rules": {
						"type": "Rule[]",
						"required": false,
						"description": "Rule list for element"
					}
				}
			},
			"Rule": {
				"classType": "Class",
				"type": "Rule",
				"properties": {
				   "type": {
					  "type": "RuleType",
					  "required": true,
					  "description": "Rule type"
				   },
				   "trigger": {
					  "type": "TriggerType",
					  "required": false,
					  "description": "Trigger type. Required if event not provided"
				   },
				   "event": {
					  "type": "string",
					  "required": false,
					  "description": "Event. Required if trigger not provided"
				   },
				   "actions": {
					   "type": "Action[]",
					   "required": true,
					   "description": "Actions to execute on rule"
				   }
				}
			},
			"RuleType": {
				"classType": "Enum",
				"type": "RuleType",
				"default": "Rule.Interaction",
				"values": ["Rule.Interaction"]
			},
			"TriggerType": {
				"classType": "Enum",	
				"description": "Trigger type which can be eaither string or predefined enum values",
				"type": "TriggerType",
				"values": ["ValueChanged", "Click", "FocusOut", "SubmitCompleted"]
			}
		}
	}
}
