{
	"name": "adaptivecards-visualizer",
	"version": "1.3.0",
	"description": "Adaptive Card Visualizer for HTML renderer",
	"author": "AdaptiveCards",
	"license": "MIT",
	"main": "lib/app.js",
	"private": true,
	"scripts": {
		"clean": "rimraf lib dist",
		"prebuild": "tsc",
		"prebuild-css": "node-sass ./scss/ -o ./css --output-style expanded",
		"build-css": "postcss ./css/*.css --use autoprefixer --replace --no-map",
		"build": "webpack",
		"watch": "webpack --watch",
		"start": "webpack-dev-server --open",
		"lint": "eslint src/**/*.ts",
		"release": "npm run clean && npm run build && webpack --mode=production"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"adaptivecards": "^2.1.0",
		"eslint": "^8.14.0",
		"markdown-it": "^13.0.0",
		"monaco-editor": "^0.20.0",
		"rimraf": "^3.0.2",
		"typescript": "^5.0.3",
		"vkbeautify": "^0.99.3",
		"webpack": "^5.76.0",
		"webpack-cli": "^5.0.0",
		"webpack-dev-server": "^4.8.1"
	}
}