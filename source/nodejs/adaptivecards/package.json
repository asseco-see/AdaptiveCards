{
	"name": "@asseco/adaptivecards",
	"version": "2.1.0",
	"description": "Adaptive Cards Javascript library for HTML Clients",
	"author": "AdaptiveCards",
	"license": "MIT",
	"homepage": "https://adaptivecards.io",
	"keywords": [
		"adaptivecards",
		"adaptive",
		"cards",
		"microsoft",
		"bot"
	],
	"main": "lib/adaptivecards.js",
	"types": "lib/adaptivecards.d.ts",
	"files": [
		"lib",
		"dist",
		"src"
	],
	"repository": {
		"type": "git",
		"url": "git://git@github.com/microsoft/AdaptiveCards.git"
	},	
	"scripts": {
		"test": "jest --forceExit --runInBand --detectOpenHandles",
		"clean": "rimraf build lib dist",
		"prebuild": "tsc",
		"build": "webpack",
		"watch": "webpack --watch",
		"start": "webpack-dev-server --open",
		"dts": "dts-generator --prefix adaptivecards --project . --out dist/adaptivecards.d.ts",
		"lint": "eslint src/*.ts",
		"release": "npm run clean && concurrently \"npm:build\" \"webpack --mode=production\" \"npm:docs\" && concurrently \"npm:test\" \"npm:dts\"",
		"docs": "npx typedoc",
		"publish": "npm version $(head -n 1 ../../../.version) && npm publish --registry https://devops.see.asseco.com/DIGITAL/_packaging/Asseco/npm/registry/ --loglevel warn"
	
	},
	"devDependencies": {
		"@types/jest": "^26.0.3",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"cdigit": "^2.6.0",
		"concurrently": "^5.2.0",
		"dts-generator": "^3.0.0",
		"eslint": "^7.3.1",
		"jest": "^26.1.0",
		"rimraf": "^3.0.2",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.1",
		"typescript": "^3.9.5",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2",
		"webpack-dev-server": "^4.8.1"
	},
	"jest": {
		"rootDir": "src",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json"
		]
	}
}
